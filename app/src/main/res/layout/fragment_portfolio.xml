<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorBackgroundSmoke">

    <Button
            android:id="@+id/btnHire2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/hire"
            android:fontFamily="@font/lucida_console"
            android:textSize="16sp"
            android:background="@drawable/selector_button_im_already_dev"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.082"/>

    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollViewPortfolio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btnHire2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/ivIconCoffee"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_coffee"/>

            <TextView
                    android:id="@+id/tvAppName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/coffee_dev"
                    android:textSize="28sp"
                    android:fontFamily="@font/signpainter_housescript"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toStartOf="@+id/btnFrameHire"
                    app:layout_constraintTop_toTopOf="@+id/ivIconCoffee"
                    app:layout_constraintStart_toEndOf="@+id/ivIconCoffee"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:id="@+id/tvAppDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/rockwell_bold"
                    android:textColor="@color/colorWhite"
                    android:text="@string/connecting_you_with_hand_selected_software_developers"
                    app:layout_constraintEnd_toStartOf="@+id/btnFrameHire"
                    app:layout_constraintTop_toBottomOf="@+id/tvAppName"
                    app:layout_constraintStart_toEndOf="@+id/ivIconCoffee"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="16dp"/>

            <FrameLayout
                    android:id="@+id/btnFrameHire"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_button_hire"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.16"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/ivIconCoffee">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lucida_console"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:text="@string/get"/>

            </FrameLayout>

            <ImageView
                    android:id="@+id/ivScreen1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ivScreen2"
                    app:layout_constraintTop_toBottomOf="@id/ivIconCoffee"
                    android:src="@drawable/image_screen_1"
                    app:layout_constraintWidth_percent="0.3"
                    app:layout_constraintHeight_percent="0.57"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <ImageView
                    android:id="@+id/ivScreen2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@+id/ivScreen1"
                    app:layout_constraintTop_toTopOf="@id/ivScreen1"
                    android:src="@drawable/image_screen_2"
                    app:layout_constraintWidth_percent="0.3"
                    app:layout_constraintEnd_toStartOf="@+id/ivScreen3"
                    app:layout_constraintBottom_toBottomOf="@id/ivScreen1"
                    app:layout_constraintHorizontal_bias="0.5"/>

            <ImageView
                    android:id="@+id/ivScreen3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@+id/ivScreen2"
                    app:layout_constraintTop_toTopOf="@id/ivScreen2"
                    app:layout_constraintBottom_toBottomOf="@id/ivScreen2"
                    app:layout_constraintWidth_percent="0.3"
                    android:src="@drawable/image_screen_3"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <View
                    android:id="@+id/viewHorizontal2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivScreen1"/>

            <ImageView
                    android:id="@+id/ivIconCoffee2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_coffee"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewHorizontal2"/>

            <TextView
                    android:id="@+id/tvAppName2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/coffee_dev"
                    android:textSize="28sp"
                    android:fontFamily="@font/signpainter_housescript"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintEnd_toStartOf="@+id/btnFrameHire2"
                    app:layout_constraintTop_toTopOf="@+id/ivIconCoffee2"
                    app:layout_constraintStart_toEndOf="@+id/ivIconCoffee2"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:id="@+id/tvAppDetails2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/rockwell_bold"
                    android:textColor="@color/colorWhite"
                    android:text="@string/connecting_you_with_hand_selected_software_developers"
                    app:layout_constraintEnd_toStartOf="@+id/btnFrameHire2"
                    app:layout_constraintTop_toBottomOf="@+id/tvAppName2"
                    app:layout_constraintStart_toEndOf="@+id/ivIconCoffee2"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="16dp"/>

            <FrameLayout
                    android:id="@+id/btnFrameHire2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_button_hire"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.16"
                    app:layout_constraintTop_toTopOf="@id/ivIconCoffee2"
                    app:layout_constraintBottom_toBottomOf="@id/ivIconCoffee2">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/lucida_console"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:text="@string/get"/>

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>