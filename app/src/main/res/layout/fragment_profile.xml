<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <ImageView
            android:id="@+id/ivBackgroundNotebook"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/background_notebook"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/viewPagerIndicator"
            android:contentDescription="@string/background_image"/>

    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorBackgroundSmoke"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/im_photographer_size"
            android:layout_height="@dimen/im_photographer_size"
            android:src="@drawable/image_photographer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivBackgroundNotebook"
            app:layout_constraintVertical_bias="0.295"
            android:contentDescription="@string/avatar"/>

    <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forrest_knight"
            android:fontFamily="@font/rockwell"
            android:textSize="23sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            app:layout_constraintBottom_toBottomOf="@id/ivBackgroundNotebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.08"/>

    <TextView
            android:id="@+id/tvProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ios_developer"
            android:fontFamily="@font/rockwell"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewVerticalLine"
            app:layout_constraintTop_toBottomOf="@id/tvProfileName"
            app:layout_constraintBottom_toBottomOf="@id/ivBackgroundNotebook"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_chainStyle="spread"/>

    <View
            android:id="@+id/viewVerticalLine"
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:background="@color/colorWhite"
            app:layout_constraintStart_toStartOf="@id/ivAvatar"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/tvProfession"
            app:layout_constraintBottom_toBottomOf="@id/tvProfession"/>

    <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/virginia_beach_va"
            android:fontFamily="@font/rockwell_bold"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toTopOf="@id/viewVerticalLine"
            app:layout_constraintStart_toEndOf="@id/viewVerticalLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/viewVerticalLine"/>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddress"
            android:id="@+id/viewPagerIndicator"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="1dp"
            app:stl_customTabTextViewId="@id/tvCustomTabIndicatorTitle"
            app:stl_customTabTextLayoutId="@layout/view_custom_tab_view"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorWithoutPadding="false"
            app:stl_indicatorInFront="true"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorColor="@color/colorWhite"
            app:stl_indicatorThickness="2dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorCornerRadius="0dp"
            app:stl_overlineThickness="0dp"
            app:stl_underlineThickness="0dp"
            app:stl_dividerColor="@color/colorWhite"
            app:stl_dividerThickness="0dp"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_defaultTabTextAllCaps="false"
            app:stl_defaultTabTextColor="@color/colorWhite"
            app:stl_defaultTabTextSize="20sp"
            app:stl_defaultTabTextHorizontalPadding="0dp"
            app:stl_defaultTabTextMinWidth="0dp"
            app:stl_distributeEvenly="true"
            app:stl_titleOffset="0dp"
    />



    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewPagerIndicator"
            app:layout_constraintBottom_toTopOf="@id/navbarBottom"/>

</androidx.constraintlayout.widget.ConstraintLayout>